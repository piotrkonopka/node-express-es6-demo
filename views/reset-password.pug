extends layout

block content
    .row
        .loginbox.col-sm-8.col-sm-offset-2.col-md-4.col-md-offset-4
            .panel.panel-info
                .panel-heading 
                    .panel-title Set a new password
                        
                .panel-body
                    form(action="/user/reset/password", method="put", name="user", enctype="multipart/form-data")
                        .alert.alert-danger.col-sm-12
                        
                        .form-group.input-group
                            span.input-group-addon
                                i.glyphicon.glyphicon-lock
                            input.form-control(type="password", name="password", placeholder="password", 
                                required, pattern="^[a-zA-Z0-9.!]{5,20}$")

                        .form-group
                            input.btn.btn-success.btn-block(type="submit", value="Save", onclick="postNewPassword()")

                    hr
                    p   Go back to Login page 
                        a(href="/login") Login
   
block scripts
    script(src="/javascripts/script.js", type="text/javascript")