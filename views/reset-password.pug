extends layout

block content
    .row
        .loginbox.col-sm-8.col-sm-offset-2.col-md-4.col-md-offset-4
            .panel.panel-info
                .panel-heading 
                    .panel-title
                        span(name="panel-title")
                        
                .panel-body
                    form(action="/user/reset/password", method="put", name="user", enctype="multipart/form-data")
                        .alert.alert-danger.col-sm-12
                        
                        .form-group.input-group
                            span.input-group-addon
                                i.glyphicon.glyphicon-lock
                            input.form-control(type="password", name="password", placeholder="password", 
                                required, pattern="^[a-zA-Z0-9.!]{5,20}$")

                        .form-group
                            input.btn.btn-success.btn-block(type="submit", value="Save", onclick="resetPassword.postNewPassword()")

                    hr
                    p
                        span(name="go-back-paragraph")
                        a(href="/login")
                            span(name="go-back-link")
   
block scripts
    script(src="/javascripts/user-interface.js", type="text/javascript")
    script(src="/javascripts/reset-password.js", type="text/javascript")