extends layout-logged

block content
    .row
        .profile-panel.col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3
            .panel.panel-info
                .panel-heading 
                    .panel-title User profile 
                    .panel-link
                        input.edit-profile-btn.btn.btn-link(type="button", name="edit-profile-btn" ,value="Edit", onclick="profile.editProfile()")
                        
                .panel-body
                    .center-block
                        img#userImage.img-circle.img-responsive(src="", alt="Avatar") 
                        p#username 
                    hr

                    dl.dl-horizontal 
                        dt Email
                        dd#userEmail
                        dt Bio
                        dd#userBio

block scripts
    script.
        let _userData = !{JSON.stringify(userData)}
    script(src="/javascripts/user-interface.js", type="text/javascript")
    script(src="/javascripts/profile.js", type="text/javascript")
