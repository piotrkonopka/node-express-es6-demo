extends layout-logged

block content
    .row
        .profile-panel.col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3
            .panel.panel-info
                .panel-heading 
                    .panel-title User profile 
                    .panel-link
                        input.btn.btn-link(type="button", value="Edit", onclick="editProfile()")
                        
                .panel-body
                    .center-block
                        img#userImage.img-circle.img-responsive(src="", alt="Avatar") 
                        p#username 
                    hr

                    dl.dl-horizontal 
                        dt Email
                        dd#userEmail
                        dt Bio
                        dd#userBio

block scripts
    script(src="/javascripts/script.js", type="text/javascript")
